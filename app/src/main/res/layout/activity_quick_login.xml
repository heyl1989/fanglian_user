<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/theme_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white" >

        <EditText
            android:id="@+id/ed_phone_quickLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/bt_forgetpsd_gain_identifying"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_code_quickLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#e6e9ee"
            android:padding="5dp"
            android:text="获取验证码（60）"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white" >

        <EditText
            android:id="@+id/ed_messageCode_quickLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_quickLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/login_quick" />

</LinearLayout>