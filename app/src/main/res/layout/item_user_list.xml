<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content" >
    
    <com.flzc.fanglian.view.CircleImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        />
    
    <TextView 
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_user_avatar"
        android:textSize="14sp"
        android:textColor="@color/black_word"
        android:text="不知道"
        />
    <TextView 
        android:id="@+id/tv_atv_sucess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_toRightOf="@id/tv_user_name"
        android:layout_marginLeft="7dp"
        android:layout_centerVertical="true"
        android:background="#ed4c4c"
        android:text="竞拍成功"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:visibility="gone"/>
    <TextView 
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:textColor="@color/grey_word"
        android:text="2016-07-09  12:89"
        />
        

</RelativeLayout>