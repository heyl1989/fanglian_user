<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableLeft="@drawable/activity_host"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="活动提供方"
        android:textColor="@color/black_word"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_hostmaster"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading_72_72" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_hostname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盖亚花园"
                android:textColor="@color/black_word"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hostcompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="盖亚花园"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tv_hostposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/activity_host_position"
            android:text="导航"
            android:textColor="#999999"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_hostphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/activity_host_phone"
            android:text="电话"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>