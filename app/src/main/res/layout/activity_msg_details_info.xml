<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/layout_title"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_msgdetails_msgicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5" >

            <TextView
                android:id="@+id/tv_msgdetails_msgtype"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="注册成功送红包"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_msgdetails_msgtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2016-03-03 20:38"
                android:textColor="@color/helper_user_text_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5" 
        android:layout_marginLeft="60dp"
        android:layout_marginRight="73dp">

        <TextView
            android:id="@+id/tv_msgdetails_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:lineSpacingExtra="7dp"
            android:textSize="12sp"
            android:text="文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述" />
    </RelativeLayout>

</LinearLayout>