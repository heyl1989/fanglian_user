<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/tv_partting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="当前报名人数："
        android:textColor="@color/black_word"
        android:textSize="16sp" />

    <com.flzc.fanglian.view.CircleImageView
        android:id="@+id/cimg_bidding_pone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/loading_72_72"
        android:visibility="gone" />

    <com.flzc.fanglian.view.CircleImageView
        android:id="@+id/cimg_bidding_ptwo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="-8dp"
        android:src="@drawable/loading_72_72"
        android:visibility="gone" />

    <com.flzc.fanglian.view.CircleImageView
        android:id="@+id/cimg_last"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="-8dp"
        android:src="@drawable/loading_72_72"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="@color/black_word"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_person_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="cad"
        android:textColor="#fcb8aa"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_users"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="参与用户"
            android:textColor="@color/grey_word"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bidendusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(30)"
            android:textColor="#fcb8aa"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>