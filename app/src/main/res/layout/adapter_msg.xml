<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_msg_msgicon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_msg_msgtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册成功送红包"
                    android:layout_marginTop="12dp"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_msg_msgtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
					android:layout_marginTop="12dp"
                    android:text="2015-01-02"
                    android:textColor="@color/helper_user_text_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_msg_msginfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="噢耶~，恭喜您成功注册房链，获得100元红包"
                    android:textColor="@color/helper_user_text_color"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_msg_red_dot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    android:src="@drawable/red_dot_5dp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

</LinearLayout>