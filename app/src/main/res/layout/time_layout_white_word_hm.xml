<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/timedown_month"
        style="@style/text"
        android:textColor="#fff"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_month"
        style="@style/text"
        android:text="月"
        android:textColor="#fff"
        android:visibility="gone" />

    <TextView
        android:id="@+id/timedown_day"
        style="@style/text"
        android:textColor="#fff"
        android:textSize="12sp" 
        android:visibility="gone" />

    <TextView
        style="@style/text"
        android:text="天"
        android:textColor="#fff"
        android:visibility="gone"  />

    <TextView
        android:id="@+id/timedown_hour"
        style="@style/text"
        android:textColor="#fff"
        android:textSize="12sp" 
        android:visibility="gone" />

    <TextView
        style="@style/text"
        android:text="时"
        android:textColor="#fff"
        android:visibility="gone"  />

    <TextView
        android:id="@+id/timedown_min"
        style="@style/text"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        style="@style/text"
        android:text="分"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/timedown_second"
        style="@style/text"
        android:textColor="#fff"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_mile"
        style="@style/text"
        android:text="秒"
        android:textColor="#fff"
        android:visibility="visible" />

</LinearLayout>