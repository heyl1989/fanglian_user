<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_bdtype_house_picture"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/loading_90_90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_bdtype_house_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11.5dp"
                android:background="@drawable/textview_boder"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="三室两厅"
                android:textColor="#222222"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_bdtype_house_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="11.5dp"
                android:background="@drawable/textview_boder"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="100㎡"
                android:textColor="#222222"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_bdtype_house_orientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="11.5dp"
                android:background="@drawable/textview_boder"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="朝南"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bdtype_house_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="11.5dp"
                android:background="@drawable/textview_boder"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="12/16层"
                android:textColor="#222222"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bdtype_dashed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/dashed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingRight="3dp"
                android:background="#ed6a6a" >

                <TextView
                    android:id="@+id/tv_bdtype_houseunit_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bdtype_house_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_bdtype_houseunit_sign"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_bdtype_ticket_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/tv_bdtype_house_price"
                        android:text="元\n优惠券"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_bdtype_ticket_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="不可领"
                android:textColor="#222222"
                android:textSize="12sp" />

            <!-- <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#d5d5d5" /> -->

            <!-- <TextView
                android:id="@+id/tv_bdtype_house_totalnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="总价2000万"
                android:textColor="#999999"
                android:textSize="10sp" /> -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>