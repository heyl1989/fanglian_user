<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmp_bmapView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.93"
        android:clickable="true" />

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_bus"
            style="@style/bottom_style"
            android:drawableTop="@drawable/selector_map_bus"
            android:text="公交地铁"
            android:textSize="12sp"
            android:drawablePadding="1dp" />

        <RadioButton
            android:id="@+id/rb_school"
            style="@style/bottom_style"
            android:drawableTop="@drawable/selector_map_school"
            android:text="学校"
            android:textSize="12sp"
            android:drawablePadding="1dp" />

        <RadioButton
            android:id="@+id/rb_hospital"
            style="@style/bottom_style"
            android:drawableTop="@drawable/selector_map_hospital"
            android:text="医院"
            android:textSize="12sp"
            android:drawablePadding="1dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="#f5f5f5"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>