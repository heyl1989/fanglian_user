<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <com.flzc.fanglian.view.CircleImageView
            android:id="@+id/cimg_counselor_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cimg_counselor_head"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_counselorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房链经纪人221"
                android:textColor="@color/black_word"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_take_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="累计带看：3人"
                android:textColor="@color/black_word"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone_agent_list" />
    </RelativeLayout>

</LinearLayout>