<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/img_houseType_master"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp" 
        android:src="@drawable/loading_72_72"/>

    <TextView
        android:id="@+id/tv_housetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_houseType_master"
        android:text="两室一同 88平方米"
        android:textColor="@color/black_word"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_consult_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="¥：25万"
        android:textColor="@color/red_word"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_consult_price"
        android:text="参考价："
        android:textColor="@color/black_word"
        android:textSize="14sp" />

</RelativeLayout>