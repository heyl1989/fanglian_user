<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_auctionbail_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_auctionbail_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="请选择支付方式"
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_auctionbail_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="22dp"
                android:text="取消"
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" />

        <RelativeLayout
            android:id="@+id/rl_auctionbail_pay_weixin"
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_auctionbail_weixinicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_payicon_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_auctionbail_weixinicon"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/iv_auctionbail_weixin_pickon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/bg_payway_pickon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" 
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_auctionbail_pay_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="49dp"
             android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_auctionbail_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_payicon_zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_auctionbail_zhifubao"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/iv_auctionbail_zhifubao_pickon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/bg_payway_pickon"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_auctionbail_pay_lianlian"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_auctionbail_lianlian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_payicon_lianlian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_auctionbail_lianlian"
                android:gravity="center_vertical"
                android:text="连连支付"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/iv_auctionbail_lianlian_pickon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/bg_payway_pickon"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/rl_auctionbail_pay_yue"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_auctionbail_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/pay_with_yu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.72"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_auctionbail_yue"
                android:gravity="center_vertical"
                android:text="账户余额"
                android:textColor="#222222" />


            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_auctionbail_yue_pickon"
                android:gravity="center_vertical"
                android:text="账户余额：0元"
                android:textColor="#999999"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_auctionbail_yue_pickon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="22dp"
                android:src="@drawable/bg_payway_pickon"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" />
        
        <RelativeLayout
            android:id="@+id/rl_auctionbail_pay_yibao"
            android:layout_width="match_parent"
            android:layout_height="49dp" >

            <ImageView
                android:id="@+id/iv_auctionbail_yibao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_payicon_yibao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_auctionbail_yibao"
                android:gravity="center_vertical"
                android:text="连连支付"
                android:textColor="#222222" 
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_auctionbail_yibao_pickon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/bg_payway_pickon"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp" >

            <ImageView
                android:id="@+id/iv_auctionbail_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/bd_auction_sure" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>