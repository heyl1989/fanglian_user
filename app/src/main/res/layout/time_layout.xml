<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/timedown_month"
        style="@style/text_background"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_month"
       style="@style/text"
       android:layout_marginLeft="5dp"
        android:text="月"
        android:visibility="gone" />

    <TextView
        android:id="@+id/timedown_day"
        style="@style/text_background"
        android:layout_marginLeft="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_day"
        style="@style/text"
        android:layout_marginLeft="5dp"
        android:text="天" />

    <TextView
        android:id="@+id/timedown_hour"
        style="@style/text_background"
        android:layout_marginLeft="5dp"
        android:textSize="12sp" />

    <TextView
       style="@style/text"
       android:layout_marginLeft="5dp"
        android:text="时" />

    <TextView
        android:id="@+id/timedown_min"
        style="@style/text_background"
        android:layout_marginLeft="5dp"
        android:textSize="12sp" />

    <TextView
       style="@style/text"
       android:layout_marginLeft="5dp"
        android:text="分" />

    <TextView
        android:id="@+id/timedown_second"
        android:layout_marginLeft="5dp"
        style="@style/text_background"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_mile"
        style="@style/text"
        android:layout_marginLeft="5dp"
        android:text="秒"
        android:visibility="gone" />

</LinearLayout>